{
  "name": "relay-provider",
  "description": "PubSub Relay JSON-RPC Provider",
  "version": "2.0.0-beta.0",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "relay",
    "json-rpc",
    "jsonrpc",
    "api",
    "provider"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "browser": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/relay-provider",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/relay-provider.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/relay-provider/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "yarn tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build:esm": "yarn tsc -p tsconfig.esm.json",
    "build": "yarn clean && yarn build:cjs && yarn build:umd && yarn build:esm",
    "test": "tsdx test ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test",
    "publish:beta": "yarn publish --tag=beta"
  },
  "devDependencies": {
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "husky": "4.2.1",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typescript": "3.7.5",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@json-rpc-tools/types": "^2.0.0-beta.1"
  }
}
